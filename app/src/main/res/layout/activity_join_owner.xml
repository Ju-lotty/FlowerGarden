<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".JoinOwner">

    <TextView
        android:id="@+id/joinTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/font"
        android:gravity="center"
        android:text="점주 회원가입"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/value_Id"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="110dp"
        android:fontFamily="@font/font"
        android:text="ID"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/joinTextView" />

    <EditText
        android:id="@+id/idEditTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/font"
        android:hint="아이디를 입력해주세요"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/value_Id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/joinTextView" />

    <TextView
        android:id="@+id/value_Pw"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="140dp"
        android:fontFamily="@font/font"
        android:text="PW"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/value_Id" />

    <EditText
        android:id="@+id/passwordEditTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/font"
        android:hint="비밀번호를 입력해주세요"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/value_Pw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/value_Id" />


    <TextView
        android:id="@+id/value_Nickname"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="190dp"
        android:fontFamily="@font/font"
        android:text="점포명"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/value_Pw" />


    <EditText
        android:id="@+id/storenameEditTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/font"
        android:hint="점포명을 입력해주세요"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/value_Nickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/value_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/font"
        android:text="전화번호"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/value_Nickname" />

    <EditText
        android:id="@+id/number"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/font"
        android:hint="전화번호를 입력해주세요"
        android:inputType="phone"
        android:maxLength="11"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/value_number"
        app:layout_constraintStart_toEndOf="@id/value_number"
        app:layout_constraintTop_toBottomOf="@id/value_Nickname" />

    <TextView
        android:id="@+id/value_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/font"
        android:text="운영시간"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/value_number" />

    <TextView
        android:id="@+id/openTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:background="#00ff0000"
        android:fontFamily="@font/font"
        android:text="오픈시간"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/value_number" />

    <TimePicker
        android:background="@color/white"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="140dp"
        android:id="@+id/selectOpenTime"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/timeCheckButton"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_marginTop="350dp"
        android:layout_marginHorizontal="150dp"
        android:text="확인"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/font"
        android:textColor="@color/white"
        android:background="@drawable/shape_login"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/notting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ff0000"
        android:fontFamily="@font/font"
        android:text="~"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/openTime"
        app:layout_constraintTop_toBottomOf="@id/value_number" />

    <TextView
        android:id="@+id/closeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#00ff0000"
        android:fontFamily="@font/font"
        android:text="닫는시간"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/notting"
        app:layout_constraintTop_toBottomOf="@id/value_number" />

    <TimePicker
        android:visibility="gone"
        android:timePickerMode="clock"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="140dp"
        android:layout_marginHorizontal="50dp"
        android:background="@color/white"
        android:id="@+id/selectCloseTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/value_OpenDay"
        android:layout_width="110dp"
        android:layout_marginEnd="130dp"
        android:fontFamily="@font/font"
        android:text="운영요일"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/value_Time"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/openDay"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font"
        android:hint="운영요일을 입력해주세요."
        android:inputType="text"
        android:maxLength="20"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        android:layout_marginStart="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="65dp"
        app:layout_constraintBottom_toTopOf="@id/address"
        app:layout_constraintTop_toBottomOf="@id/notting" />

    <TextView
        android:id="@+id/value_Address"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="130dp"
        android:fontFamily="@font/font"
        android:text="주소"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/value_OpenDay" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addressButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:background="#00ff0000"
        android:fontFamily="@font/font"
        android:hint="주소입력을 해주세요."
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/value_Address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/address"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/font"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addressButton"
        tools:text="서울특별시 종로구" />

    <TextView
        android:id="@+id/x_Result"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/font"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address" />

    <TextView
        android:id="@+id/y_Result"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/font"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/x_Result"
        tools:text="123.00123" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/joinOwnerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="150dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_login"
        android:text="회원가입"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address" />


</androidx.constraintlayout.widget.ConstraintLayout>